#include <iostream>
#define SIZE 50

using namespace std;
int main() {
    int array[10];
    int i, max, min, size, sum, avg;
    
    cout << " Enter size of the array: ";
    cin>>size;
      
    cout<<"  Enter " << size << " elements in the array:\n";
    for ( i=0 ; i<size ; i++)
    cin>>array[i];
  
    max = array[0];
    min = array[0];

    for(i=1 ; i<size ; i++) {

    if(array[i]>max)
    max=array[i];

   if(array[i]<min)
    min = array[i];
        
    }

   cout<<"Highest value : "<< max <<endl;
   cout<<"Lowest value : "<<min; 
 
    
    
      
   sum += array[i];
   avg = sum/size;
   cout<<"\nAverage: "<<avg;
       return 0;
}
